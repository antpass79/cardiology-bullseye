{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "../../out-tsc/app",
        "types": [
            "node"
        ],
        "paths": {
            "core-js/es7/reflect": [
                "node_modules/core-js/proposals/reflect-metadata",
            ],
            "core-js/es6/*": [
                "node_modules/core-js/es"
            ],
            "@bull-eye": [
                "projects/bull-eye/src/index"
            ],
            "@antpass79/drawable-surface": [
                "projects/drawable-surface/src/index"
            ]
        }
    },
    "exclude": [
        "src/test.ts",
        "**/*.spec.ts"
    ]
}